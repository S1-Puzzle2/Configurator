<Window x:Class="PuzzleCreator.PuzzleCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PuzzleCreation" Height="400" Width="400">

    <Grid>
        <TextBox  Height="30" HorizontalAlignment="Left" Margin="20,10,0,0" Name="FileNameTextBox"
                 VerticalAlignment="Top" Width="264" />
        <Button Content="Browse" FontSize="15"  Height="30" BorderThickness="3" HorizontalAlignment="Right" Margin="0,10,20,0"
                Name="button1" VerticalAlignment="Top" Width="88" Click="button1_Click" />

        <Button Content="Send to Server"  FontSize="15" Height="30" BorderThickness="3" HorizontalAlignment="Center" Margin="21,0,21,10" VerticalAlignment="Bottom" Width="350" Click="Button_Click"/>
        <Image Name="PuzzleSource" HorizontalAlignment="Left" Height="235" Margin="21,92,0,0" VerticalAlignment="Top" Width="351"/>
        <TextBox  Name ="PuzzleName"  Height="30" HorizontalAlignment="Left" Margin="134,52,0,0" VerticalAlignment="Top" Width="234" />
        <Label FontSize="15" Content="Puzzle Name" HorizontalAlignment="Left" Margin="21,52,0,0" VerticalAlignment="Top" Width="108"/>


    </Grid>


</Window>
